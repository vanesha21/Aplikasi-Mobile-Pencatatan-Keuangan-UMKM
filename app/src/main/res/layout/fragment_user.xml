<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".userFragment"
        android:background="#D3D3D3">

        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:id="@+id/wallpaper"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#03A9F4">
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/teksprofil"
            android:layout_width="match_parent"
            android:layout_height="162dp"
            android:layout_below="@id/wallpaper"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yurico ignasius may silamba"
                android:textStyle="bold"
                android:layout_marginTop="70dp"
                android:textSize="22dp"
                android:paddingLeft="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_radius"
                android:text="Edit profil"/>

        </LinearLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/fotoprofil"
            android:layout_width="98dp"
            android:layout_height="100dp"
            android:src="@drawable/foto"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="76dp"
            app:shapeAppearanceOverlay="@style/circular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_below="@id/teksprofil"
            android:padding="10dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail profile"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/home"
                android:drawablePadding="10dp"
                android:textSize="19dp"
                android:paddingTop="12dp"
                android:layout_marginTop="9dp"
                android:text="@string/kota"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/location"
                android:drawablePadding="10dp"
                android:layout_marginTop="9dp"
                android:textSize="19dp"
                android:paddingTop="12dp"
                android:text="@string/asalkota"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/email"
                android:drawablePadding="10dp"
                android:layout_marginTop="9dp"
                android:textSize="19dp"
                android:paddingTop="12dp"
                android:text="Ditoyurico@gmail.com"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/birthday"
                android:drawablePadding="10dp"
                android:layout_marginTop="9dp"
                android:textSize="19dp"
                android:paddingTop="12dp"
                android:text="09-November-2023"
                android:textStyle="bold"/>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>