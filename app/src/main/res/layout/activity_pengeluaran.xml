<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Pengeluaran"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="#F8E9F1">

    <ImageView
        android:id="@+id/out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="322dp"
        android:layout_height="510dp"
        android:layout_gravity="center"
        android:layout_marginTop="73dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="80dp"
        android:orientation="vertical"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pengeluaran"
            android:textColor="#B40569"
            android:textSize="30dp"
            android:paddingTop="19dp"
            android:gravity="center"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/tanggalpengeluaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="90dp"
            android:drawableStart="@drawable/calendar"
            android:drawablePadding="10dp"
            android:paddingLeft="6dp"
            android:hint="Tanggal Pengeluaran"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="140dp"
            android:hint="@string/produk"
            app:startIconDrawable="@drawable/list"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/dropdown"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="17dp"
                android:inputType="none"/>

        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/totalbarang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="217dp"
            android:drawableStart="@drawable/shoppingcart"
            android:drawablePadding="10dp"
            android:paddingLeft="6dp"
            android:hint="Total barang"
            />

        <EditText
            android:id="@+id/jumlahpengeluaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="270dp"
            android:drawableStart="@drawable/money_pemasukan"
            android:drawablePadding="10dp"
            android:paddingLeft="6dp"
            android:hint="Jumlah Pengeluaran"
            />

        <EditText
            android:id="@+id/keterangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="324dp"
            android:drawableStart="@drawable/notes"
            android:drawablePadding="10dp"
            android:paddingLeft="6dp"
            android:hint="Keterangan" />

        <Button
            android:id="@+id/confirmpengeluaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="430dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:backgroundTint="#D9027D"
            android:text="Confirm" />

    </androidx.cardview.widget.CardView>


</LinearLayout>