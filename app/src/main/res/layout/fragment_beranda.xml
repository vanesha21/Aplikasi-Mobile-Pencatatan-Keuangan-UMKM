<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".berandaFragment"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:scrollbars="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D9027D"
        >
        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:id="@+id/titlelayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#D9027D">

            <ImageView
                android:id="@+id/gambarbackground"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/background"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="40dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/gambarbackground"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="65dp"
                android:layout_marginRight="-225dp"
                android:text="Shurya Rajut"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/gambarbackground"
                android:layout_marginTop="89dp"
                android:layout_marginBottom="-40dp"
                android:paddingLeft="40dp"
                android:text="Selamat Datang,"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/titleteks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/gambarbackground"
                android:layout_marginTop="89dp"
                android:layout_marginBottom="-40dp"
                android:paddingLeft="200dp"
                android:text="Admin"
                android:textColor="#D9E8FA"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/titlelayout"
            android:background="#FFC107"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/pemasukan"
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="170dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#F8E9F1"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical"></RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:textAlignment="center"
                android:layout_marginTop="35dp"
                android:text="Pemasukan"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#B40569" />
            <ImageView
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginLeft="23dp"
                android:src="@drawable/walletmoney" />
        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:id="@+id/cardhome"
            android:layout_width="match_parent"
            android:layout_height="530dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/beranda_card"
            app:cardCornerRadius="25dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/Pengeluaran"
                android:layout_width="356dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#F8E9F1"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical"></RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:textAlignment="center"
                    android:layout_marginTop="40dp"
                    android:text="Pengeluaran"
                    android:textColor="#B40569"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="107dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/moneyrp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/riwayatpemesanan"
                android:layout_width="356dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="240dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#F8E9F1"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:text="Catatan"
                    android:textColor="#B40569"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:textAlignment="center"
                    android:layout_marginTop="50dp"
                    android:text="Pesanan"
                    android:textColor="#B40569"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="107dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/document" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/catatankeuangan"
                android:layout_width="356dp"
                android:layout_height="105dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="380dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#F8E9F1"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:text="Laporan"
                    android:textColor="#B40569"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="50dp"
                    android:textAlignment="center"
                    android:text="Keuangan"
                    android:textColor="#B40569"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="107dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/book" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>